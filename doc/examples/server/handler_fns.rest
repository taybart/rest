# Server
server {
  address = "localhost:18080"
  handler "POST" "/login" {
    fn = <<LUA
      local body = json.decode(rest.req.body)
      if body.username == "root" and body.password == "toor" then
        local token = uuid.newv4()
        kv.set('last_token', token)  -- in memory key value cache
        return {
          status = 200,
          body = json.encode({token = token})
        }
      end
      return {
        status = 401,
        json.encode({error = "invalid credentials"})
      }
    LUA
  }
  handler "GET" "/user/{id}" {
    fn = <<LUA
      local token = tools.get_req_bearer_token()
      if not uuid.is_uuidv4(token) then
        return {
          status = 401,
          body = json.encode({error = "missing credentials"})
        }
      end
      local last_token = kv.get('last_token')
      if last_token ~= token then
        return {
          status = 401,
          body = json.encode({error = "invalid credentials"})
        }
      end
      -- get id from path
      local id = s.path_value("id")
      return {
        status = 200,
        body = json.encode({ id = id, name = "Frankie Muniz" })
      }
    LUA
  }
}


